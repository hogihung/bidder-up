<p id="notice"><%= notice %></p>

<h1>Bids</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Quantity</th>
      <th>Bid Amount</th>
      <th>BUID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.id %></td>
        <td><%= bid.quantity %></td>
        <td><%= number_to_currency(bid.bid_amount) %></td>
        <td><%= bid.buid %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

